{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Exams Data Schema",
  "description": "Schema describing the structure used by exams.json (mock exam center).",
  "type": "object",
  "required": ["exam_size","total_questions","total_exams","exams"],
  "properties": {
    "exam_size": {
      "type": "integer",
      "minimum": 0,
      "description": "Suggested or default size (number of questions) for generated exams."
    },
    "total_questions": {
      "type": "integer",
      "minimum": 0,
      "description": "Total number of questions available in the pool."
    },
    "total_exams": {
      "type": "integer",
      "minimum": 0,
      "description": "Total number of exam variants included in this file."
    },
    "exams": {
      "type": "array",
      "description": "Array of exam objects (each is a set of questions).",
      "items": {
        "type": "object",
        "required": ["exam_id","questions"],
        "properties": {
          "exam_id": { "type": "integer" },
          "questions": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/question"
            }
          }
        },
        "additionalProperties": true
      }
    }
  },
  "definitions": {
    "question": {
      "type": "object",
      "required": ["id","question","answers","correct_answer_ids"],
      "properties": {
        "id": { "type": "integer" },
        "question": { "type": "string" },
        "answers": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/definitions/answer" }
        },
        "correct_answer_ids": {
          "type": "array",
          "items": { "type": "integer" },
          "minItems": 1,
          "description": "List of answer ids that are considered correct for this question. For single-correct questions this array has one element; for multiple-correct it has multiple."
        }
      },
      "additionalProperties": true
    },
    "answer": {
      "type": "object",
      "required": ["id","text"],
      "properties": {
        "id": { "type": "integer" },
        "text": { "type": "string" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
